	author = {Chaves, Saulo and Evangelista, Jeniffer S. P. C. and Alves, Rodrigo S. and Ferreira, Filipe M. and Dias, Luiz A. S. and Alves, Rafael M. and Dias, Kaio O. G. and Bhering, Leonardo L.},
